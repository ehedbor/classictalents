<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">
  <HBox fx:id="specsPane" spacing="10" alignment="CENTER">
    <padding>
      <Insets topRightBottomLeft="20"/>
    </padding>
    <!-- include specs here -->
  </HBox>
  <HBox alignment="CENTER">
    <padding>
      <Insets right="10" bottom="20" left="10"/>
    </padding>
    <VBox fx:id="footer" styleClass="class-footer" alignment="CENTER">
      <padding>
        <Insets right="10" left="10"/>
      </padding>
      <Label text="Talent Info:" styleClass="class-description-text" VBox.vgrow="NEVER"/>
      <Label fx:id="requiredLevelLabel" styleClass="class-description-text" VBox.vgrow="NEVER"/>
      <Label fx:id="remainingPointsLabel" styleClass="class-description-text" VBox.vgrow="NEVER"/>
    </VBox>
  </HBox>
</VBox>

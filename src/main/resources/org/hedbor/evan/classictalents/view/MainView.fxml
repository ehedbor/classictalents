<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.hedbor.evan.classictalents.controller.MainViewController"
      styleClass="class-background">
  <!-- The nested hbox here prevents the inner hbox from expanding to fill all horizontal space -->
  <HBox alignment="CENTER">
    <padding>
      <Insets top="20" bottom="20"/>
    </padding>
    <HBox fx:id="classButtonsPane" styleClass="class-footer"
          spacing="30" alignment="CENTER" HBox.hgrow="NEVER">
      <padding>
        <Insets top="10" right="15" bottom="10" left="15"/>
      </padding>
      <fx:include source="TalentButtonView.fxml"/>
      <fx:include source="TalentButtonView.fxml"/>
      <fx:include source="TalentButtonView.fxml"/>
    </HBox>
  </HBox>
  <HBox fx:id="classViewPane" alignment="CENTER">
    <fx:include source="WowClassView.fxml"/>
  </HBox>
</VBox>
